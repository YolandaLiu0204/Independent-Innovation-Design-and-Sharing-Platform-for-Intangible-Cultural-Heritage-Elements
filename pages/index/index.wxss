page {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  padding: 0rpx;
  background-color: rgba(255, 252, 245, 1);
}

.list{
  display: flex;
  flex-direction: column;
  align-items: center; 
  margin-bottom: 5%;
}

.activity{
  margin-top: 5%;
}

/* 搜索框样式 */
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  /* 所有直接子节点上的 align-self 值设置为一个组。align-self 属性设置项目在其包含块中在交叉轴方向上的对齐方式 */
  align-items: center;
  /* 设置元素的宽度 */
  width:90%;
  /* 指定一个元素的高度 */
  height:60rpx;
  /* 设置元素的背景色 */
  background-color:whitesmoke;
  /* 顶部外边距 */
  margin-top: 5%;
  margin-left: 5%;
  /* 设置边界属性 */
  border:1rpx solid whitesmoke;
  /* 设置边框圆角 */
  border-radius: 5rpx;
}

/* 搜索框提示文字样式 */
.search input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}

/* 搜索框小图标 */
.search image
{ 
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
}